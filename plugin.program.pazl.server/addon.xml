<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.pazl.server"
       name="Пазл Сервер"
       version="0.4.2"
       provider-name="TDW">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.service" library="server.py" start="[login|startup]"/>
  <extension point="xbmc.service" library="watchdog.py" start="[login|startup]"/>
  <extension point="xbmc.addon.metadata">
    <summary>Пазл Сервер</summary>
    <description>Сервер рестриммер</description>
    <platform>all</platform>
  </extension>
</addon>
